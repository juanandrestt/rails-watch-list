<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://frenchmania.fr/wp-content/uploads/2018/01/SAM_2717.jpg)">
  Watchlists
</div>

<div class="container">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1603791440384-56cd371ee9a7?auto=format&fit=crop&w=1350&q=80'); background-size: cover; background-position: center;">
      <h2><%= list.name %></h2>
      <p>
        <%= link_to "See details", list, class: "btn btn-primary" %>
      </p>
    </div>
  <% end %>
</div>
